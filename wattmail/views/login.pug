doctype html
html(xmlns='http://www.w3.org/1999/xhtml', lang='en', xml:lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title WattMail - Login
    link(rel='stylesheet', href='stylesheets/global.css')
    link(rel='stylesheet', href='stylesheets/accounts.css')
  body
    #layout
      #nav.navlog
        #nav-logo
          img#logo(src='images/mail_logo_sticky.png', alt='WattMail logo')
        #nav-bottom
          a(href='http://validator.w3.org/check/referer')
            img#stamp_html.stamp(src='images/stamp_html.png', alt='Verification')
          |  
          a(href='https://jigsaw.w3.org/css-validator/check/referer')
            img#stamp_css.stamp(src='images/stamp_css.png', alt='Verification')
    #login-panel
      form#login-form(method='post', action='index.html')
        h3.nomargin Sign In
        p.login-message Login to access your account.
        p.login-message
          | Not a member? 
          a(href='register.html')
            strong Register Here
        |  
        input#username.username(type='text', placeholder='Username', required='required')
        |  
        input#password.password.margin-top15(type='password', placeholder='Password', required='required')
        |  
        a(href='')
          small Forgot Your Password?
        |  
        button Sign In
      |  
      img#decoration(src='images/decoration_login.png', alt='')

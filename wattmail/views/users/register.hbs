<link rel="stylesheet" href="/stylesheets/accounts.css"/>
<div id="layout">
  <div id="nav" class="navreg">
	<div id="nav-logo">
	  <img id="logo" src="/images/mail_logo_sticky.png" alt="WattMail logo"/>
	</div>

	<div id="nav-bottom">
	  <a href="http://validator.w3.org/check/referer"><img class="stamp" id="stamp_html" src="/images/stamp_html.png" alt="Verification"/></a>
	  <a href="https://jigsaw.w3.org/css-validator/check/referer"><img class="stamp" id="stamp_css" src="/images/stamp_css.png" alt="Verification"/></a>
	</div>
  </div>
</div>
<div id="register-panel">
	{{#if success_msg}}
    <div id="alert1" class="alert alert-success">{{success_msg}}</div>
    {{/if}}

    {{#if error_msg}}
    <div id="alert2" class="alert alert-danger">{{error_msg}}</div>
    {{/if}}

    {{#if error}}
    <div id="alert3" class="alert alert-danger">{{error}}</div>
    {{/if}}
    {{#if errors}}
    {{#each errors}}
    <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
    {{/if}}
	<div id="register-box">
		<form id="register-form" method="post" action="/users/register">
			<h3 class="nomargin">Register</h3>
			<p id="register-message">Already a member? <a href="/users/login"><strong>Sign In</strong></a></p>
			<label>Name</label>
			<div class="margin-bottom10 register-box">
				<div class="column-50-left">
					<input name="name" id="name" type="text" placeholder="First Name" required="required" title="Enter your first name." onkeyup='saveValue(this);'/>
				</div>
				<div class="column-50-right">
					<input name="lastname" id="lastname" type="text" placeholder="Last Name" required="required" title="Enter your last name." onkeyup='saveValue(this);'/>
				</div>
			</div>
			<div class="margin-bottom10 register-box">
				<label>Username</label>
				<input name="username" id="username" class="username" required="required" type="text" title="Enter your desired WattMail username." onkeyup='saveValue(this);'/>
			</div>
			<div class="margin-bottom10 register-box">
				<label>Email</label>
				<input name="email" id="email" type="email" required="required" title="Enter your Heriot-Watt email address." onkeyup='saveValue(this);'/>
			</div>
			<div class="margin-bottom10 register-box">
				<label>Password</label>
				<input name="password" class="password" type="password"  required="required" title="Enter your desired WattMail password."//>
			</div>

			<div class="margin-bottom10 register-box">
				<label>Retype Password</label>
				<input name="password2" class="password" type="password" required="required" title="Re-type your WattMail password."//>
			</div>

			<label>Date of Birth</label>

			<div class="margin-bottom10 register-box">
				<input id="day" type="date" placeholder="Date of Birth" required="required" title="Enter your date of birth." onkeyup='saveValue(this);'/>
			</div>
			<button>Register</button>
		</form>
	</div>
</div>
